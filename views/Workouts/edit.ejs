<% include ../partials/header.ejs %>
<% include ../partials/main_nav.ejs %>
<!-- Content for adding a new workout -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="post">
                <div class="form-group">
                    <label for="nameTextField"> Workout Title</label>
                    <input type="text" class="form-control" 
                    id="nameTextField" 
                    placeholder="Enter Workout Title"
                    name="name"
                    value="<%= workout.name %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextField"> Description</label>
                    <input type="text" class="form-control" 
                    id="descriptionTextField" 
                    placeholder="Enter Description"
                    name="description"
                    value="<%= workout.description %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="durationTextField"> Duration</label>
                    <input type="text" class="form-control" 
                    id="durationTextField" 
                    placeholder="Enter Duration"
                    name="duration"
                    value="<%= workout.duration %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="setsTextField"> Sets</label>
                    <input type="text" class="form-control" 
                    id="setsTextField" 
                    placeholder="Enter Sets"
                    name="sets"
                    value="<%= workout.sets %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="repsTextField"> Reps</label>
                    <input type="text" class="form-control" 
                    id="repsTextField" 
                    placeholder="Enter Reps"
                    name="reps"
                    value="<%= workout.reps %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="dateTextField"> Date</label>
                    <input type="date" class="form-control" 
                    id="dateTextField" 
                    placeholder="Enter Date"
                    name="date"
                    value="<%= workout.date.toISOString().substring(0, 10) %>"
                    required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>
                <a href="/workout" class="btn btn-warning">
                    <i class ="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>
<% include ../partials/bottom_nav.ejs %>
<% include ../partials/footer.ejs %>    